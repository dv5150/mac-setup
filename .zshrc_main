# Keep the line if you have ______ installed:

export PATH="/opt/homebrew/bin:${PATH}" # Homebrew
export TERM=xterm-256color # Ghostty
export EZA_CONFIG_DIR=~/.config/eza # Eza

eval "$(starship init zsh)" # Starship
eval "$(zoxide init zsh)" # Zoxide

source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh # Zsh
source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh # Zsh

unalias -a

# Zoxide
alias cd="z"

# Eza
alias ls="eza --icons"
alias ll="eza -l --icons"
alias la="eza -la --icons"

# Docker
alias dcu='docker compose up'
alias dcd='docker compose down'
alias dps='docker ps'
alias dcps='docker compose ps'
alias dcr='docker compose run --rm'
alias dexec='docker compose exec -it'

# Laravel
alias art='php artisan'

# Open various config files
alias editeza="open -e ~/.config/eza/theme.yml" # Eza
alias editstarship="open -e ~/.config/starship.toml" # Starship
alias editghostty="open -e ~/.config/ghostty/config" # Ghostty
alias editzsh="open -e ~/.zshrc_main" # Zsh

cd ~/www && clear